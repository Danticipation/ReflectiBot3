{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Ensures strict type-checking rules are applied
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [], // Specify type definitions explicitly if needed
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./server/**/*",
    "./shared/**/*",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.json"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
