{
  "extends": "./tsconfig.json",
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "server",
    "noEmit": false,
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true
  }
}